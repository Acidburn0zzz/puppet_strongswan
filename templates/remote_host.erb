# host <%= name %>
conn <%= name %>
        right=<%= right_ip_address %>
        rightid=@<%= right_id %>
        rightcert=<%= right_cert_name %>.asc
<% unless right_subnet.empty? -%>
        rightsubnet=<%= right_subnet.collect{|s| s.include?('/') ? s : (s.include?(':') ? "#{s}/128" : "#{s}/32" ) }.join(',') %>
<% end -%>
        type=transport
        auto=start

